<p>
  <strong>ユーザ:</strong>
  <%= @weekly_report.user.name %>
</p>

<div>
  <strong><%= @weekly_report.reported_time %>の週報:</strong>
  <%= Qiita::Markdown::Processor.new.call(@weekly_report.content)[:output].to_s.html_safe %>
</div>

<p>
  <strong>更新日時:</strong>
  <%= @weekly_report.updated_at %>
</p>

<% if @weekly_report.user == current_user %>
  <%= link_to '編集', edit_weekly_report_path(@weekly_report), class: 'btn btn-primary pull-right' %>
<% end %>

<% if @comments %>
  <table class="table"">
    <caption>コメント</caption>
    <tbody>
      <% @comments.each do |comment| %>
	<tr>
	  <td class="gravatar_td"><%= gravatar_for comment.user %></td>
	  <td class="comment_content""><%= comment.user.name %><br>
	    <%= comment.content %></td>
	  <td class="comment_time"><%= comment.updated_at %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= render 'comments/form', comment: @comment %>
