<h3>Comments</h3>

<% if comments %>
  <% comments.each do |comment| %>
    <div class="comment_element">
	    <div class="user_icon"><%= gravatar_for comment.user, 40 %></div>

      <div class="comment_body">
	      <div class="comment_user"><%= comment.user.name %></div>
        <div class="comment_time"><%= comment.updated_at %></div>
      </div>

	    <%= comment.content %>
    </div>
  <% end %>
<% end %>

<%= render 'comments/form', comment: comment %>
