<% if comments %>
  <table class="table">
    <caption>コメント</caption>
    <tbody>
      <% comments.each do |comment| %>
	      <tr>
	        <td class="gravatar_td"><%= gravatar_for comment.user %></td>
	        <td class="comment_content"><%= comment.user.name %><br>
	          <%= comment.content %></td>
          <td class="comment_time"><%= comment.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= render 'comments/form', comment: comment %>
